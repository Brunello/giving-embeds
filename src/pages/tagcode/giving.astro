<!-- Giving Site -->
<script type="text/javascript">
    if (!document.cookie.includes("giving_banner_closed=1")) {
        var iframe = document.createElement("iframe");
        var body = document.querySelector("body");
        iframe.src = "https://giving-embeds.vercel.app/banner";
        iframe.setAttribute("id", "giving-banner");
        document.body.insertBefore(iframe, body.firstChild);

        window.addEventListener("message", function (event) {
            if (event.data === "banner closed") {
                var date = new Date(Date.now() + 86400 * 1000).toUTCString();
                document
                    .getElementById("giving-banner")
                    .parentNode.removeChild(
                        document.getElementById("giving-banner")
                    );
                document.cookie =
                    "giving_banner_closed=1; expires=" +
                    date +
                    "max-age=86400;";
            }
            console.log(event.data);
        });

        window.addEventListener("scroll", function () {
            var scrollTop = window.scrollY;
            if (scrollTop > 160) {
                document.querySelector(".site-header").style.top = "0px";
                document.getElementById("giving-banner").style.display = "none";
            } else {
                document
                    .querySelector(".site-header")
                    .style.removeProperty("top");
                document.getElementById("giving-banner").style.display =
                    "block";
            }
        });
    }
</script>
