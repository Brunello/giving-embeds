    body {
        margin: 0;
        padding: 0;
    }

    .banner-container {
        background-color: #61cee4;
        color: #fff;
        display: flex;
        justify-content: center;
        padding: 0 9%;
        width: calc(100% - 18%);
    }

    .banner-container.closed {
        display: none;
    }

    .banner-content {
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .graph img {
        padding-top: 8px;
        margin-bottom: -3.5px;
    }

    .cta {
        color: #000;
        background-color: #b2dfed;
        border: 1px solid #000;
        padding: 5px 24px;
        font-size: 24px;
        text-decoration: none;
        font-family: "freight-display-pro";
        font-weight: 700;
    }

    p {
        font-family: "franklin-gothic-urw";
        color: #000;
        font-size: 18px;
        text-transform: uppercase;
        font-weight: 500;
    }

    #close {
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: #444648;
        border: 1px solid #fff;
        color: #fff;
        font-size: 8px;
        padding-inline: 0;
        padding-top: 2px;
        cursor: pointer;
        position: absolute;
        top: 1.5em;
        right: 1.5em;
    }

    @media screen and (max-width: 990px) {
        .banner-container {
            width: calc(100% - 4em);
            padding: 16px 2em 0;
        }

        .banner-content {
            flex-direction: row;
            align-items: center;
            justify-content: center;
            gap: 8px;
            flex-wrap: wrap;
        }
        .banner-content p {
            margin: 0;
            text-align: center;
            order: 0;
            width: 100%;
        }
        #close {
            position: absolute;
            top: 1.5em;
            right: 1.5em;
        }

        .cta-container {
            min-width: unset;
        }

        .graph {
            /* display: none; */
            order: 1;
        }

        .cta {
            order: 2;
        }
    }

    @media screen and (max-width: 420px) {
        .cta {
            padding: 5px 16px;
        }

        .graph {
            max-width: 150px;
        }

        .graph img {
            width: 100%;
        }
    }
</style>

<script>
    const close = document.getElementById("close") as HTMLElement;
    close.addEventListener("click", () => {
        window.parent.postMessage("banner closed", "*");
    });
</script>
