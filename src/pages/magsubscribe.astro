---
import Layout from "../layouts/Layout.astro";
import Covers from "../assets/columbia-book-image.png";
---

<Layout title="Giving to Columbia Banner">
    <main>
        <div class="banner-container">
            <div class="banner-content">
                <div class="graph">
                    <img src={Covers.src} alt="Columbia Magazine Covers" />
                </div>
                <p>Sign up for a digital or print subscription!</p>
                <a
                    class="cta"
                    href="https://magazine.columbia.edu/subscribe?utm_source=CUmagazine&utm_medium=website&utm_campaign=banner"
                    target="_blank"
                >
                    <span class="cta-text">Subscribe</span>
                </a>
                <button id="close">X</button>
            </div>
        </div>
    </main>
</Layout>

