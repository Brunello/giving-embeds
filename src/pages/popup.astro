---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Giving to Columbia Popup">
	<main>
        <div class="popup-container">
            <div class="popup">
                <div class="popup-image"></div>
                <div class="popup-content">
                    <span>Wednesday, October 25, 2023</span>
                    <h2>Mark your calendar for Columbia Giving Day</h2>
                    <p>When we come together each Giving Day, we have the power to transform by providing access, resources, and opportunities to the students, faculty, and researchers carrying out this critical work in their communities and around the globe.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
                <div id="close" class="close"></div>
            </div>
        </div>
	</main>
</Layout>

<style>
    .popup-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-color: rgba(0,0,0,.5);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .popup {
        position: relative;
        width: 100%;
        max-width: 800px;
        background-color: #fff;
        padding: 75px 56px 56px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
    }
    .popup-content {
        display: contents;
    }
    .popup-content span {
        /* font-family: gotham; */
        color: #055EA9;
        font-weight: 500;
        font-size: 24px;
        line-height: 1.33;
        margin: 0;
        margin-bottom: 14px;
    }
    .popup-content h2 {
        font-size: 48px;
        line-height: 1.125;
        font-weight: 700;
        color: #003373;
        letter-spacing: -0.75px;
        margin: 0;
        margin-bottom: 14px;
    }
    .popup-content p {
        font-size: 19px;
        line-height: 1.421;
        color: #000;
        margin-bottom: 32px;
    }
    .popup-content a {
        padding: 13px 29px;
        background-color: #FED302;
        color: #003373;
        font-size: 18px;
        text-decoration: none;
        font-weight: 700;
    }
</style>

